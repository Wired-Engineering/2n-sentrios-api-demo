{
  "verbose": true,
  "watch": ["src/**/*.js", "bin/*"],
  "env": {
    "NODE_ENV": "development"
  },
  "ext": "js,json,ts",
  "delay": "1000",
  "execMap": {
    "js": "node",
    "ts": "ts-node"
  },
  "events": {
    "restart": "echo \"Application restarted due to changes!\""
  },
  "restartable": "rs"
}